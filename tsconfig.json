{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "baseUrl": ".",
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@models": ["src/models"],
      "@config": ["src/config/config.ts"],
      "@providers/*": ["src/providers/*"],
      "@hooks/*": ["src/hooks/*"],
      "@test-utils/*": ["tests/utils/*"],
      "@styles/*": ["src/styles/*"],
      "@images/*": ["src/images/*"]
    }
  },
  "exclude": ["./node_modules", "./.cache", "./public"],
  "include": ["./src/**/*"]
}
